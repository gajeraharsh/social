<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel - <%= typeof title !== 'undefined' ? title : '' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin/posts">Admin Panel</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/posts">Posts</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/accounts">Accounts</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/logs">Logs</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid px-3 px-md-4">
    <% if (typeof success !== 'undefined' && success.length) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <%- body %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/public/js/main.js"></script>
</body>
</html>
